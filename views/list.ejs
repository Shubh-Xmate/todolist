<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for(var i = 0; i < newListItem.length; i ++)
        { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="hidden" name="list" value="<%= listTitle %>">
                    <input type="checkbox" name="checkChange" value = "<%= newListItem[i]._id %>" onchange="this.form.submit()"><p><%= newListItem[i].name %></p>
                </div>
            </form>
        <%} %>
        <form class="item" action="/" method="post">
        <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
    </div>

<%- include("footer") -%>